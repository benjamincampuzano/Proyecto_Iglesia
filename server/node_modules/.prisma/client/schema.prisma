// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  LIDER_DOCE
  LIDER_CELULA
  MIEMBRO
}

enum GuestStatus {
  NUEVO
  CONTACTADO
  EN_CONSOLIDACION
  CONVERTIDO
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  fullName  String
  role      Role     @default(MIEMBRO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invitedGuests  Guest[] @relation("InvitedBy")
  assignedGuests Guest[] @relation("AssignedTo")

  leaderId  Int?
  leader    User?  @relation("Discipleship", fields: [leaderId], references: [id])
  disciples User[] @relation("Discipleship")
}

model Guest {
  id            Int         @id @default(autoincrement())
  name          String
  phone         String
  address       String?
  prayerRequest String?
  status        GuestStatus @default(NUEVO)

  invitedById Int
  invitedBy   User @relation("InvitedBy", fields: [invitedById], references: [id])

  assignedToId Int?
  assignedTo   User? @relation("AssignedTo", fields: [assignedToId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
