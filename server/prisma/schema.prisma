// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  PASTOR
  LIDER_DOCE
  LIDER_CELULA
  DISCIPULO
  PROFESOR
  AUXILIAR
  INVITADO
}

enum GuestStatus {
  NUEVO
  CONTACTADO
  CONSOLIDADO
  GANADO
}

enum AttendanceStatus {
  PRESENTE
  AUSENTE
}

enum ClassAttendanceStatus {
  ASISTE
  AUSENCIA_JUSTIFICADA
  AUSENCIA_NO_JUSTIFICADA
  BAJA
}

enum EnrollmentStatus {
  INSCRITO
  EN_PROGRESO
  COMPLETADO
  ABANDONADO
}

enum Sex {
  HOMBRE
  MUJER
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  fullName       String
  role           Role     @default(DISCIPULO)
  sex            Sex?
  phone          String?
  address        String?
  city           String?
  latitude       Float?
  longitude      Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastLogin      DateTime?
  auditLogs      AuditLog[]
  
  invitedGuests  Guest[]  @relation("InvitedBy")
  assignedGuests Guest[]  @relation("AssignedTo")

  // OLD: Deprecated - will be removed after migration
  leaderId       Int?
  leader         User?    @relation("Discipleship", fields: [leaderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  disciples      User[]   @relation("Discipleship")

  // NEW: Hierarchical network structure
  pastorId       Int?
  pastor         User?    @relation("Pastor", fields: [pastorId], references: [id], onDelete: SetNull)
  DiscipulosPastor User[]   @relation("Pastor")
  
  liderDoceId    Int?
  liderDoce      User?    @relation("LiderDoce", fields: [liderDoceId], references: [id], onDelete: SetNull)
  DiscipulosDoce   User[]   @relation("LiderDoce")
  
  liderCelulaId  Int?
  liderCelula    User?    @relation("LiderCelula", fields: [liderCelulaId], references: [id], onDelete: SetNull)
  DiscipulosCelula User[]   @relation("LiderCelula")

  cellId         Int?
  cell           Cell?    @relation("CellMembers", fields: [cellId], references: [id])
  ledCells       Cell[]   @relation("CellLeader")
  hostedCells    Cell[]   @relation("CellHost")
  doceNetworkCells Cell[] @relation("CellLiderDoce")

  churchAttendances ChurchAttendance[]
  cellAttendances   CellAttendance[]
  seminarEnrollments SeminarEnrollment[]
  classAttendances  ClassAttendance[]
  conventionRegistrations ConventionRegistration[]
  
  guestCalls      GuestCall[]
  guestVisits     GuestVisit[]

  // School / Discipleship Relations
  professedModules SeminarModule[] @relation("ModuleProfessor")
  auxiliaryModules SeminarModule[] @relation("ModuleAuxiliaries") // Many-to-Many
  guidedEnrollments SeminarEnrollment[] @relation("AssignedAuxiliar")
}

model Guest {
  id            Int         @id @default(autoincrement())
  name          String
  phone         String
  address       String?
  prayerRequest String?
  status        GuestStatus @default(NUEVO)
  
  called         Boolean     @default(false)
  callObservation String?
  visited        Boolean     @default(false)
  visitObservation String?

  invitedById   Int
  invitedBy     User        @relation("InvitedBy", fields: [invitedById], references: [id])
  
  assignedToId  Int?
  assignedTo    User?       @relation("AssignedTo", fields: [assignedToId], references: [id])
  
  calls         GuestCall[]
  visits        GuestVisit[]
  
  encuentroRegistrations EncuentroRegistration[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model GuestCall {
  id          Int      @id @default(autoincrement())
  guestId     Int
  guest       Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  date        DateTime @default(now())
  observation String
  callerId    Int
  caller      User     @relation(fields: [callerId], references: [id])
  createdAt   DateTime @default(now())
}

model GuestVisit {
  id          Int      @id @default(autoincrement())
  guestId     Int
  guest       Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  date        DateTime @default(now())
  observation String
  visitorId   Int
  visitor     User     @relation(fields: [visitorId], references: [id])
  createdAt   DateTime @default(now())
}

  model Cell {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  leaderId    Int
  leader      User     @relation("CellLeader", fields: [leaderId], references: [id])
  hostId      Int?
  host        User?    @relation("CellHost", fields: [hostId], references: [id])
  liderDoceId Int?
  liderDoce   User?    @relation("CellLiderDoce", fields: [liderDoceId], references: [id])
  address     String?
  city        String?
  latitude    Float?
  longitude   Float?
  dayOfWeek   String?
  time        String?
  cellType    String   @default("ABIERTA") // ABIERTA, CERRADA
  members     User[]   @relation("CellMembers")
  attendances CellAttendance[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChurchAttendance {
  id        Int              @id @default(autoincrement())
  date      DateTime
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  status    AttendanceStatus @default(PRESENTE)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@unique([date, userId])
}

model CellAttendance {
  id        Int              @id @default(autoincrement())
  date      DateTime
  cellId    Int
  cell      Cell             @relation(fields: [cellId], references: [id])
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  status    AttendanceStatus @default(PRESENTE)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@unique([date, cellId, userId])
}

model SeminarModule {
  id          Int                 @id @default(autoincrement())
  name        String
  description String?
  moduleNumber Int?               
  code        String?             @unique
  type        String              @default("SEMINARIO") // SEMINARIO, CAPACITACION_DESTINO, ESCUELA
  
  // School Fields
  startDate   DateTime?
  endDate     DateTime?
  professorId Int?
  professor   User?               @relation("ModuleProfessor", fields: [professorId], references: [id])
  auxiliaries User[]              @relation("ModuleAuxiliaries")

  enrollments SeminarEnrollment[]
  materials   ClassMaterial[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model ClassMaterial {
  id           Int           @id @default(autoincrement())
  moduleId     Int
  module       SeminarModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  classNumber  Int           // 1-10
  description  String?
  documents    String[]      // Array of URLs/paths
  videoLinks   String[]      // Array of URLs
  quizLinks    String[]      // Array of URLs
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([moduleId, classNumber])
}

model SeminarEnrollment {
  id              Int                @id @default(autoincrement())
  userId          Int
  user            User               @relation(fields: [userId], references: [id])
  moduleId        Int
  module          SeminarModule      @relation(fields: [moduleId], references: [id])
  status          EnrollmentStatus   @default(INSCRITO)
  assignmentsDone Int                @default(0)
  finalProjectGrade Float?
  
  // School Fields
  assignedAuxiliarId Int?
  assignedAuxiliar   User?           @relation("AssignedAuxiliar", fields: [assignedAuxiliarId], references: [id])
  projectNotes       String?
  finalGrade         Float?

  classAttendances ClassAttendance[]
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@unique([userId, moduleId])
}

model ClassAttendance {
  id           Int                   @id @default(autoincrement())
  enrollmentId Int
  enrollment   SeminarEnrollment     @relation(fields: [enrollmentId], references: [id])
  userId       Int
  user         User                  @relation(fields: [userId], references: [id])
  classNumber  Int
  status       ClassAttendanceStatus @default(ASISTE)
  grade        Float?
  notes        String?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt

  @@unique([enrollmentId, classNumber])
}

enum ConventionType {
  FAMILIAS
  MUJERES
  JOVENES
  HOMBRES
}

enum RegistrationStatus {
  REGISTERED
  CANCELLED
  ATTENDED
}

model Convention {
  id          Int      @id @default(autoincrement())
  type        ConventionType
  year        Int
  theme       String?
  cost        Float
  startDate   DateTime
  endDate     DateTime
  liderDoceIds Int[]   @default([])
  registrations ConventionRegistration[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([type, year])
}

model ConventionRegistration {
  id                 Int                @id @default(autoincrement())
  userId             Int
  user               User               @relation(fields: [userId], references: [id])
  conventionId       Int
  convention         Convention         @relation(fields: [conventionId], references: [id], onDelete: Cascade)
  status             RegistrationStatus @default(REGISTERED)
  discountPercentage Float              @default(0)
  needsTransport     Boolean            @default(false)
  needsAccommodation Boolean            @default(false)
  payments           ConventionPayment[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@unique([userId, conventionId])
}

model ConventionPayment {
  id             Int                    @id @default(autoincrement())
  registrationId Int
  registration   ConventionRegistration @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  amount         Float
  date           DateTime               @default(now())
  notes          String?
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
}

enum EncuentroType {
  MUJERES
  HOMBRES
  JOVENES
}

model Encuentro {
  id          Int      @id @default(autoincrement())
  type        EncuentroType
  name        String
  description String?
  cost        Float
  startDate   DateTime
  endDate     DateTime
  liderDoceIds Int[]   @default([])
  registrations EncuentroRegistration[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EncuentroRegistration {
  id                 Int                @id @default(autoincrement())
  guestId            Int
  guest              Guest              @relation(fields: [guestId], references: [id])
  encuentroId        Int
  encuentro          Encuentro          @relation(fields: [encuentroId], references: [id], onDelete: Cascade)
  status             RegistrationStatus @default(REGISTERED)
  discountPercentage Float              @default(0)
  payments           EncuentroPayment[]
  classAttendances   EncuentroClassAttendance[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@unique([guestId, encuentroId])
}

model EncuentroPayment {
  id             Int                    @id @default(autoincrement())
  registrationId Int
  registration   EncuentroRegistration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  amount         Float
  date           DateTime               @default(now())
  notes          String?
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
}

model EncuentroClassAttendance {
  id             Int                    @id @default(autoincrement())
  registrationId Int
  registration   EncuentroRegistration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  classNumber    Int                    // 1-5 (Pre), 6-10 (Post)
  attended       Boolean                @default(false)
  date           DateTime               @default(now())
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt

  @@unique([registrationId, classNumber])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action     String   // 'LOGIN', 'CREATE', 'UPDATE', 'DELETE'
  entityType String   // 'CELL', 'CONVENTION', 'ENCUENTRO', 'USER', 'SESSION'
  entityId   Int?
  details    String?  // JSON stringified details
  createdAt  DateTime @default(now())
}
